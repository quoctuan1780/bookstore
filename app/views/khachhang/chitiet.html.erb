<div class="container">
	<div id="content" class="space-top-none">
			<div class="space20">&nbsp;</div>
    <div class="row">
      <table class="table table-hover">
            <thead>
                <tr>
                    <th>Sản phẩm</th>
                    <th>Hình ảnh</th>
                    <th class="text-center">Số lượng</th>
                    <th>Đơn giá</th>
                    <th class="text-right">Thành tiền</th>
                </tr>
            </thead>
            <tbody>
            <%thanhtien = 0%>
            <% @ctdh.each do |ct| %>
                <tr ng-repeat="item in OrderDetails" class="ng-scope">
                    <td>
                        <a href="/chitiet/index/<%=ct.id%>" target="_blank" class="ng-binding"><%=ct.tensach%></a>
                    </td>
                    <td><img src="<%=image_path("#{ct.hinhanh}")%>" class="img-responsive" style="height:40px;"></td>
                    <td class="text-center"><strong class="ng-binding"><%=ct.Soluong%></strong></td>
                    <td class="ng-binding"><%=ct.giaban%> VND</td>
                    <td class="text-right ng-binding"><%=ct.giaban*ct.Soluong%>VND</td>
                    <%thanhtien += ct.Soluong*ct.giaban%>
                </tr>
            <% end %>
            </tbody>
            <tbody class="order-totals-summary">
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td class="text-right">Tổng giá trị sản phẩm:</td>
                    <td class="text-right">
                        <span><%=thanhtien%> VND</span>
                    </td>
                </tr>
                <tr>
                    <td class="text-right" colspan="4">Số tiền phải thanh toán:</td>
                    <td class="text-right">
                        <span><%=thanhtien%> VND</span>
                    </td>
                </tr>
            </tbody>
        </table>     
      </div>
  </div>
</div>