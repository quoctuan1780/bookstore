<div class="container">
	<div id="content" class="space-top-none">
		<div class="main-content">
			<div class="space60">&nbsp;</div>
			<div class="row">
				<div class="col-sm-12">
					<div class="beta-products-list">
						<h4>Kết quả tìm kiếm</h4>
						<div class="beta-products-details">
							<p class="pull-left">Có <%=@sach.length%></p>
							<div class="clearfix"></div>
						</div>

						<div class="row">
						<% @sach.each do |s| %>
							<div class="col-sm-3" style="height: 520px;">
							<div class="single-item">
								<div class="single-item-header">
								<%= image_tag "sach/#{s.hinhanh}", :style => "box-shadow: 0px 0px 3px 0px rgba(88, 88, 88, 0.3);", :height => "320px", :width => "240px"%>
								</div>
								<div class="single-item-body" style="padding-top:30px">
									<p class="single-item-title" style="height:10px"><%= s.tensach%></p>
									<p class="single-item-price" style="padding-top:30px; height:50px" >
										<span class="flash-sale"><%= s.giaban%> VND</span>
									</p>
								</div>
								<div class="single-item-caption">
									<a class="add-to-cart pull-left" href="javascript:void(0)" onclick="addCart(<%=s.id%>)"><i class="fa fa-shopping-cart"></i></a>
									<a class="beta-btn primary" href="/chitiet/index/<%=s.id%>">Chi tiết<i class="fa fa-chevron-right"></i></a>
									<div class="clearfix"></div>
								</div>
							</div>
						</div>
						<%end%>
						</div>
					<%= will_paginate @sach, renderer: BootstrapPagination::Rails%>
					</div> <!-- .beta-products-list -->

					<div class="space50">&nbsp;</div>
                </div>
			</div> <!-- end section with sidebar and main content -->
		</div> <!-- .main-content -->
	</div> <!-- #content -->
</div> <!-- .container -->